#include <stdio.h>
#include <stdlib.h>

void aloca(float **x,int n){
    int i;
    float num;

    *x=(float*)malloc(n*sizeof(float));

    for(i=0;i<n;i++){
        printf("Forneça o valor do vetor na posição[%d]: ",i);
       scanf("%f",&(*x)[i]);
        //scanf("%f",&num);
       // (*x)[i]=num;
    }
}

int main(){
    int i,n=0;
    float *v=NULL;

    printf("\nForneça o tamanho do vetor: ");
    scanf("%d",&n);

    if(n>0){
        aloca(&v,n);

        for(i=0;i<n;i++){
            printf("%.0f ",v[i]);
        }

        free(v);
    }
    else
        printf("\nTamanho do vetor fornecido é INVÁLIDO!!!");

    return 0;
}
